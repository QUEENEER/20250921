#include <bits/stdc++.h>
using namespace std;
#define int long long
const int N=1e5+1;
int n,m;
vector<int>g[N];
bool vis[N];
int ans;
void dfs(int x){
	for(int i=0;i<g[x].size();i++){
		int neigh=g[x][i];
		if(!vis[neigh]){
			vis[neigh]=true;
			dfs(neigh);
		}
	}
}

signed main(){
	cin>>n>>m;
	for(int i=1;i<=m;i++){
		int u,v;
		cin>>u>>v;
		g[u].push_back(v);
		g[v].push_back(u);
	}
	for(int i=1;i<=n;i++){
		if(!vis[i]){
			vis[i]=true;
			ans++;
			dfs(i);
		}
	}
	cout<<ans<<endl;
}
